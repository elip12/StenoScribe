    <fragment
        android:id="@+id/navigation_photos"
        android:name="com.example.stenoscribe.ui.photos.PhotosFragment"
        android:label="@string/title_photos"
        tools:layout="@layout/fragment_photos" />

    <fragment
        android:id="@+id/navigation_documents"
        android:name="com.example.stenoscribe.ui.documents.DocumentsFragment"
        android:label="@string/title_documents"
